<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="net.devwiki.recyclerview">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".single.SingleActivity"/>
        <activity android:name=".chat.ChatActivity"/>
        <activity android:name=".multi.MultiActivity">
        </activity>
        <activity android:name=".footer.FooterActivity">
        </activity>
        <activity android:name=".scroll.ScrollActivity">
        </activity>
        <activity android:name=".grid.GridActivity">
        </activity>
        <activity android:name=".divider.DividerActivity">
        </activity>
    </application>

</manifest>